{
    "name": "Beta cryptoWallet Extension",
    "description": "Transfer funds to any wallet",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "./assets/logo.png",
        "48": "./assets/logo.png",
        "128": "./assets/logo.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./assets/logo.png",
            "48": "./assets/logo.png",
            "128": "./assets/logo.png"
        }
    },
    "permissions": [
        "tabs",
        "bookmarks",
        "unlimitedStorage",
        "nativeMessaging"
    ]
}
